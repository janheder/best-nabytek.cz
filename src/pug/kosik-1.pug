doctype html
include partials/_variables.pug  
html(lang=lang)
    include partials/_header.pug  
    body
        include partials/_navMain.pug
        section.o-cartNav
            .container.o-cartNav__container
                .o-cartNav__single.-active
                    .o-cartNav__title Nákupní košík
                    .o-cartNav__number 1
                .o-cartNav__single
                    .o-cartNav__title Doprava a platba
                    .o-cartNav__number 2
                .o-cartNav__single
                    .o-cartNav__title Osobní údaje
                    .o-cartNav__number 3
                .o-cartNav__single
                    .o-cartNav__title Shrnutí objednávky
                    .o-cartNav__number 4

        section.o-cartNavResponsive
            a.o-cartNavResponsive__link.-prev.-disabled(href="#")
                span.a-icon.-cheveron.o-cartNavResponsive__icon
            p.o-cartNavResponsive__title 1/4 Nákupní košík
            a.o-cartNavResponsive__link.-next(onclick="$('#delivery-form-submit').trigger('click');")
                span.a-icon.-cheveron.o-cartNavResponsive__icon

        .a-cartNavResponsivePush

        main
            .container
                form(method="post" action="" name="cart_form")
                    .cart-item-top
                        .cart-item-top__col-1
                            .cart-item-top__img
                                p.cart-item-top__heading Produkt
                        .cart-item-top__col-2
                            .cart-item-top__name
                            .cart-item-top__inner
                                .cart-item-top__qty
                                    p.cart-item-top__heading Počet kusů
                                .cart-item-top__price
                                    p.cart-item-top__heading Cena za kus
                                .cart-item-top__sum
                                    p.cart-item-top__heading Cena celkem
                                .cart-item-top__delete


                    .cart-item-single
                        .cart-item-single__col-1  
                            .cart-item-single__thumb-wrap
                                .cart-item-single__thumb
                                    img.cart-item-single__img.lazy(src=URLbase+"img/placeholder-200x200.png" data-src=URLbase+"img/product-thumb-small.jpg")


                        .cart-item-single__col-2   
                            .cart-item-single__name-wrap
                                a.cart-item-single__name(href="#") #{ProductName}
                                p.cart-item-single__stock Dostupné skladem   

                            .cart-item-single__inner    
                                .cart-item-single__qty-wrap 
                                    .cart-item-single__qty
                                        .m-numberStepper.-dark
                                            input.m-numberStepper__input(type="number" min="1" max="99" value="1" name="cart-item-single-qty")
                                            .m-numberStepper__btnUp
                                                span.m-numberStepper__iconUp
                                            .m-numberStepper__btnDown
                                                span.m-numberStepper__iconDown

                                .cart-item-single__price-wrap
                                    span.cart-item-single__price-old 14 290 Kč
                                    p.cart-item-single__price 8 489 Kč
                                .cart-item-single__sum-wrap
                                    p.cart-item-single__sum #[span 18 546] Kč
                                .cart-item-single__delete-wrap
                                    a.cart-item-single__delete(href="#")
                                        span.cross-icon.cart-item-single__delete-icon

                    .m-cartPriceOverview
                            p.m-cartPriceOverview__text Celková cena s DPH:
                            h3.m-cartPriceOverview__price #[span.m-cartPriceOverview__priceNumber 65 599] Kč

                    .m-cartFreeShipping
                        .progress.m-cartFreeShipping__progress
                            .progress-bar.m-cartFreeShipping__progressBar(role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" style="width: 25%")       
                        p.m-cartFreeShipping__text Nakupte ještě za #[span.m-cartFreeShipping__price 5 100 Kč] a máte dopravu zdarma


                    .m-cartButtons
                        a.btn.-dark(href="#") Zpět do obchodu
                        a.btn.-remove.-transparent(href="#") Vyprázdnit košík
                        button.btn.-secondary(type="submit" id="delivery-form-submit") Doprava a platba #[span.a-btnIcon #[span.a-icon.-cheveron.-white]]
                               

            .m-cartBarResponsive
                .m-cartBarResponsive__priceWrap
                    p.m-cartBarResponsive__text Celková cena s DPH
                    h3.m-cartBarResponsive__price #[span 65 599] Kč
                .m-cartBarResponsive__btnWrap
                    button.btn.m-cartBarResponsive__btn(onclick="$('#delivery-form-submit').trigger('click');") Doprava a platba #[span.a-btnIcon #[span.a-icon.-cheveron.-white]] 


        include partials/_footer.pug 

        include partials/_js-include.pug