doctype html
include partials/_variables.pug  
html(lang=lang)
    include partials/_header.pug  
    body
        include partials/_nav.pug
        section.page-heading.page-heading--cart
            .container.page-heading--cart__container
                .page-heading--cart__wrap
                    a.page-heading--cart__single.pass(href="#")
                        .page-heading--cart__single-wrap
                            p.page-heading--cart__title #[span.page-heading--cart__number 1] Nákupní košík
                    a.page-heading--cart__single.pass(href="#")
                        .page-heading--cart__single-wrap
                            p.page-heading--cart__title #[span.page-heading--cart__number 2] Osobní údaje
                    a.page-heading--cart__single.active(href="#")
                        .page-heading--cart__single-wrap
                            p.page-heading--cart__title #[span.page-heading--cart__number 3] Souhrn objednávky
                    a.page-heading--cart__single(href="#")
                        .page-heading--cart__single-wrap
                            p.page-heading--cart__title #[span.page-heading--cart__number 4] Dokončení objednávky

        section.page-heading.page-heading--cart-responsive
            a.page-heading--cart__control(href="/kosik.html?krok=2")
                span.caret-icon.left
            p.page-heading--cart__title 3/4 Souhrn objednávky
            a.page-heading--cart__control(onclick="$('#cart_3_submit').click();")
                span.caret-icon.right
        .page-heading--cart-responsive-push

        main
            .container
                form(method="post" action="" name="cart_form")
                    .row.cart-item-top
                        .cart-item-top__col-1
                            .cart-item-top__img
                                p.cart-item-top__heading Produkt
                        .cart-item-top__col-2
                            .cart-item-top__name
                            .cart-item-top__inner
                                .cart-item-top__qty
                                    p.cart-item-top__heading Počet kusů
                                .cart-item-top__price
                                    p.cart-item-top__heading Cena za kus
                                .cart-item-top__sum
                                    p.cart-item-top__heading Cena celkem


                    .row.cart-item-single
                        .cart-item-single__col-1  
                            .cart-item-single__thumb-wrap
                                .cart-item-single__thumb
                                    img.cart-item-single__img.lazy(src=URLbase+"img/placeholder-200x200.png" data-src=URLbase+"img/product-thumb-small.jpg")

                        .cart-item-single__col-2   
                            .cart-item-single__name-wrap
                                p.cart-item-single__name #{ProductName}
                                p.cart-item-single__stock Dostupné skladem   

                            .cart-item-single__inner    
                                .cart-item-single__qty-wrap 
                                    p.cart-item-single__qty-text 1 kus/ů
                                .cart-item-single__price-wrap
                                    span.cart-item-single__price-old 14 290 Kč
                                    p.cart-item-single__price 8 489 Kč
                                .cart-item-single__sum-wrap.text-right
                                    p.cart-item-single__sum #[span 8 489] Kč



                    .row.cart-item-single
                        .cart-item-single__col-1  
                            .cart-item-single__thumb-wrap
                                .cart-item-single__thumb
                                    img.cart-item-single__img.lazy(src=URLbase+"img/placeholder-200x200.png" data-src=URLbase+"img/product-thumb-small.jpg")

                        .cart-item-single__col-2   
                            .cart-item-single__name-wrap
                                p.cart-item-single__name #{ProductName}
                                p.cart-item-single__stock Dostupné skladem   

                            .cart-item-single__inner    
                                .cart-item-single__qty-wrap 
                                    p.cart-item-single__qty-text 1 kus/ů
                                .cart-item-single__price-wrap
                                    span.cart-item-single__price-old 14 290 Kč
                                    p.cart-item-single__price 8 489 Kč
                                .cart-item-single__sum-wrap.text-right
                                    p.cart-item-single__sum #[span 8 489] Kč

                    .cart-shipping-payment-overview
                        h4.cart-shipping-payment-overview__title Způsob dopravy
                        .cart-shipping-payment-overview__single
                            p.cart-shipping-payment-overview__name ČP, Benefit-plus program, balík do ruky:
                            span.cart-shipping-payment-overview__price 129 Kč

                    .cart-shipping-payment-overview
                        h4.cart-shipping-payment-overview__title Způsob dopravy a platby
                        .cart-shipping-payment-overview__single
                            p.cart-shipping-payment-overview__name Převod na účet
                            span.cart-shipping-payment-overview__price 0 Kč

                    .cart-price-overview
                        .cart-price-overview__wrap
                            p.cart-price-overview__text Celková cena s DPH:
                            h3.cart-price-overview__price #[span.cart-price-overview__number 16 989] Kč

                    .cart-user-info-overview
                        .row
                            .cart-user-info-overview__single
                                h3.cart-user-info-overview__title #[span.cart-user-info-overview__title-number 1.] Osobní údaje
                                .cart-user-info-overview__single-content
                                    p.cart-user-info-overview__text Jméno a příjmení: #[span.cart-user-info-overview__strong Petr Novák]
                                    p.cart-user-info-overview__text Emailová adresa: #[span.cart-user-info-overview__strong petr@novak.cz]
                                    p.cart-user-info-overview__text Telefonní číslo: #[span.cart-user-info-overview__strong 605 598 989]
                                    p.cart-user-info-overview__text Ulice: #[span.cart-user-info-overview__strong Petra Bezruče]
                                    p.cart-user-info-overview__text Číslo ulice: #[span.cart-user-info-overview__strong 18]
                                    p.cart-user-info-overview__text Město: #[span.cart-user-info-overview__strong Praha]
                                    p.cart-user-info-overview__text Kraj: #[span.cart-user-info-overview__strong Praha]
                                    p.cart-user-info-overview__text PSČ: #[span.cart-user-info-overview__strong 898 89]
                                    p.cart-user-info-overview__text Stát: #[span.cart-user-info-overview__strong Česko]

                            .cart-user-info-overview__single
                                h3.cart-user-info-overview__title #[span.cart-user-info-overview__title-number 2.] Fakturační adresa
                                .cart-user-info-overview__single-content
                                    p.cart-user-info-overview__text Stejná jako u osobních ůdajů

                            .cart-user-info-overview__single
                                h3.cart-user-info-overview__title #[span.cart-user-info-overview__title-number 3.] Dodací adresa
                                .cart-user-info-overview__single-content
                                    p.cart-user-info-overview__text Stejná jako u osobních ůdajů

                 

                    .cart-terms-checkbox
                        .form-group
                            .form-check
                                label.form-check__label
                                    input.form-check__input(type="checkbox" name="cart-form-heureka") 
                                    span.form-check__box.checkbox
                                    span.form-check__inline Nesouhlasím se zasláním dotazníku spokojenosti v rámci programu Ověřeno zákazníky, který pomáhá zlepšovat vaše služby.
                                    
                        .form-group
                            .form-check
                                label.form-check__label
                                    input.form-check__input(type="checkbox" name="cart-form-terms" required) 
                                    span.form-check__box.checkbox
                                    span.form-check__inline Souhlasím s #[a.form-check__link(href="#") obchodními podmínkami]

                    .cart-bottom-btns
                        a.btn.btn-dark(href="#") #[span.btn__icon.arrow-icon.left.white] Krok zpět
                        button.btn(type="submit" id="cart_3_submit") Dokončit objednávku #[span.btn__icon.arrow-icon.white]

            .cart-price-overview-responsive
                .cart-price-overview-responsive__price-wrap
                    p.cart-price-overview-responsive__text Celková cena s DPH
                    h3.cart-price-overview-responsive__price #[span 16 989] Kč
                .cart-price-overview-responsive__btn-wrap
                    a.btn.cart-price-overview-responsive__btn(onclick="$('#cart_3_submit').click();") Dokončit objednávku #[span.btn__icon.arrow-icon.white]


        include partials/_footer.pug

        include partials/_js-include.pug